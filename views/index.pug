extends ./layout.pug

block content
    header
        .container
            .intro-text
                .intro-lead-in
                .intro-heading
    section#id.bg-light-gray
        .container
            .row
                .col-lg-12.text-center
                    h2.section-heading We are
            .row.text-center
                .col-md-4
                    span.fa-stack.fa-4x
